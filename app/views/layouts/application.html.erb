<!DOCTYPE html>
<html>
<head>
  <title>Ideafactory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'https://js.stripe.com/v1','data-turbolinks-track' => true %>

  <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>



<!-- NAVBAR ######################################## -->
<div class="navbar navbar-default">
        <div id="signinsignout"> 
            <%if user_signed_in? %>
            <div id="scootleft">
              Signed in as: &nbsp;@<%=current_user.first_name%>&nbsp;&nbsp;
            </div>

<div id="scootright">

 <%if current_user.omniauth_raw_data.present?%>

 <%=image_tag current_user.omniauth_raw_data["info"]["image"] %>

 <%end%>
              <div class="btn btn-default">
              <%=link_to 'Logout', 
              destroy_user_session_path, 
              :method => :delete %>
            </div>


          </div>



              <%else%>
            
              <div class="btn btn-default">
              <%=link_to "Connect Twitter", user_omniauth_authorize_path(provider: :twitter)%>
            </div>

            <%end%><br><br><br>
        </div>
           
</div>
<!-- ############################################### -->
  
</head>
<body>

<%= yield %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

</body>
</html>
