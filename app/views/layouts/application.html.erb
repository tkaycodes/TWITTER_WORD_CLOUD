<!DOCTYPE html>
<html>
<head>
  <title>Ideafactory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'https://js.stripe.com/v1','data-turbolinks-track' => true %>

  <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>

  <%= tag :meta, name: "stripe-key", content: ENV["STRIPE_PUBLISHABLE_KEY"]%>


<!-- NAVBAR ######################################## -->
<div class="navbar navbar-default">
    <div id="scootover">
        <div id="signinsignout"> 
            <%if user_signed_in? %>
              Hello&nbsp;<%=current_user.first_name%>&nbsp;&nbsp;

 <%if current_user.omniauth_raw_data.present?%>

 <%=image_tag current_user.omniauth_raw_data["info"]["image"] %><br>
 <div class="btn btn-default">
 <%=link_to "tweet cloud", tweets_path%>
</div>
 <%end%>



              <%=link_to 'Logout', 
              destroy_user_session_path, 
              :method => :delete %>
              <%else%>
            
              <div class="btn btn-default">
              <%=link_to "Connect Twitter", user_omniauth_authorize_path(provider: :twitter)%>
            </div>

            <%end%><br><br><br>
        </div>
           
    </div>
</div>
<!-- ############################################### -->
  
</head>
<body>

<%= yield %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

</body>
</html>
